
[user]
	name = Patrick Gilday
	email = pcgilday@users.noreply.github.com

# override user info for work repos
[includeIf "gitdir:~/repos/homezen/"]
    path = .gitconfig-homezen

[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true

[core]
    editor = /usr/local/bin/vim
    excludesfile = ~/.gitignore-global

[alias]

	# Pretty graph view
    g = log --graph --date=relative --all --format=format:'%C(dim yellow)%h%C(reset) %C(cyan)%d%C(reset) %C(green)%s%C(reset) %C(dim yellow)<%an>%C(reset)'

	# grab from remote, i.e. prr upstream 55
    prr = "!f() { git fetch -fu $1 refs/pull/$2/head:pr/$2; git checkout pr/$2; } ; f"

    # pr/pr-clean - https://gist.github.com/gnarf/5406589
    pr  = "!f() { git fetch -fu ${2:-origin} refs/pull/$1/head:pr/$1; }; f"
    # checkout pr branch TODO - use git pr above then checkout
    prr  = "!f() { git fetch -fu ${2:-origin} refs/pull/$1/head:pr/$1 && git checkout pr/$1; }; f"
    pr-clean = "!git for-each-ref refs/heads/pr/* --format='%(refname)' | while read ref ; do branch=${ref#refs/heads/} ; git branch -D $branch ; done"

    prune-up = remote update pcgilday --prune

	# Switch to a branch, creating it if necessary
    go = checkout -B
	co = checkout
	cp = cherry-pick
	ad = add .
	pl = pull -r
	am = commit --amend
	ca = commit -a
	bd = branch -d
	rp = remote prune pcgilday origin
	ss = status -s
	d = diff
	# diff between master and HEAD
	dm = diff master..HEAD
	# diff show filenames only
	df = diff --name-status
	# show files different between master and HEAD
	dfm = diff --name-status master..HEAD


	# Show verbose output about tags, branches or remotes
    branches = branch -a
    remotes = remote -v

	# Interactive rebase with the given number of latest commits
    reb = "!r() { git rebase -i HEAD~$1; }; r"
[apply]
    # Detect whitespace errors when applying a patch
    whitespace = fix
[push]
	default = simple
[color]
	branch = auto
	diff = auto
	status = auto
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[color "decorate"]
	tags = cyan
